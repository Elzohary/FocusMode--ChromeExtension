{
    "manifest_version": 3,
    "name": "Reading Time",
    "description": "Add the reading time to Chrome Extension documentation articles. And my FIRST working extension ^_^",
    "version": "1.0",
    "icons": {
        "128": "Pictures/icon-128.png",
        "16": "Pictures/icon-16.png",
        "48": "Pictures/icon-48.png",
        "32": "Pictures/icon-32.png"
    },
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": [
                "https://developer.chrome.com/docs/extensions/*",
                "https://developer.chrome.com/docs/webstore/*"
            ]
        }
    ]
}